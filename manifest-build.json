{
	"manifest_version": 2,

	"name": "AFAS helper",
	"description": "This extension allows hours to be written easy in Colours' AFAS.",
	"version": "1.0",

	"permissions": [
		"storage",
		"tabs", 
		"http://*/*", 
		"https://*/*"
	],
	"browser_action": {
		"default_icon": "afas-helper.png",
		"default_popup": "popup.html"
	},
	"background": {
		"page": "/index.html",
		"persistent": true
	},
	"content_scripts": [ 
	{
		"js": [
			"default.js",
			"default-popup.js"
		],
		"css": [
			"/css/lib/jquery-ui-1.8.11.custom.css", 
			"/css/jquery.weekcalendar.css", 
			"/css/style.css"
		],
		"matches": [ "http://*/*", "https://*/*"]
	}]
}