{
  "manifest_version": 2,

  "name": "Afwastool",
  "description": "This extension allows hours to be written easy.",
  "version": "1.0",

  "permissions": [
	"storage",
	"tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_icon": "afwastool.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "/weekcalendar.html",
    "persistent": true
  },
  "content_scripts": [ 
	{
    "js": ["/js/libs/jquery-1.4.4.min.js", "/js/jquery.weekcalendar.js", "/js/popup.js"],
    "matches": [ "http://*/*", "https://*/*"]
	}
   ]
}